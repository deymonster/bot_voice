# Telegram Bot Token (Get from @BotFather)
BOT_TOKEN=your_token_here

# Whisper Model Settings
MODEL_SIZE=medium
# cpu or cuda (if you have NVIDIA GPU)
DEVICE=cpu
# float32 for cpu, float16 for cuda, int8 for quantized (less memory)
COMPUTE_TYPE=int8

# Performance & Limits
MAX_WORKERS=1
RATE_LIMIT_REQUESTS=3
RATE_LIMIT_WINDOW=60

# Security & Monitoring
# Comma-separated list of allowed chat IDs. Leave empty to allow all.
ALLOWED_CHATS=
# User ID of the admin to receive error notifications
ADMIN_ID=12345678

# CPU Performance Tuning
# 0 means auto (use available cores)
CPU_THREADS=0
# Internal parallelism inside faster-whisper; keep 1 for low CPU
NUM_WORKERS=1
# Bias transcription with a prompt (optional, Russian)
INITIAL_PROMPT=
# If true, do not attempt to download models; use local cache only
LOCAL_FILES_ONLY=false
# Decoding parameters
BEAM_SIZE=2
WITHOUT_TIMESTAMPS=true
CONDITION_ON_PREVIOUS_TEXT=false
